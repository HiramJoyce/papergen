<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.papergen.dao.PaperDao">
    <resultMap id="paperMap" type="com.papergen.domain.Paper">
        <result column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="time" property="time"/>
        <result column="chapter" property="chapter"/>
        <result column="section" property="section"/>
        <result column="subject" property="subject"/>
        <result column="level" property="level"/>
        <result column="radio_num" property="radioNum"/>
        <result column="radio_ids" property="radioIds"/>
        <result column="multiple_num" property="multipleNum"/>
        <result column="multiple_ids" property="multipleIds"/>
        <result column="judge_num" property="judgeNum"/>
        <result column="judge_ids" property="judgeIds"/>
        <result column="filling_num" property="fillingNum"/>
        <result column="filling_ids" property="fillingIds"/>
        <result column="essay_num" property="essayNum"/>
        <result column="essay_ids" property="essayIds"/>
        <result column="state" property="state"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    <sql id="base_column">
        id, title, time, chapter, section, subject, level, radio_num, radio_ids, multiple_num, multiple_ids, judge_num, judge_ids, filling_num, filling_ids, essay_num, essay_ids, state, create_time
    </sql>
    <sql id="base_column_noid">
        title, time, chapter, section, subject, level, radio_num, radio_ids, multiple_num, multiple_ids, judge_num, judge_ids, filling_num, filling_ids, essay_num, essay_ids, state, create_time
    </sql>
    <select id="selectPaperById" resultMap="paperMap">
        select <include refid="base_column"/> from paper WHERE id=#{id};
    </select>
    <select id="selectAllPapers" resultMap="paperMap">
        select <include refid="base_column"/> from paper ORDER BY create_time;
    </select>
    <select id="selectPaperByChapterSection" resultMap="paperMap">
        select <include refid="base_column"/> from paper where chapter=#{chapter} and section=#{section} ORDER BY create_time;
    </select>
    <insert id="insertPaper" parameterType="com.papergen.domain.Paper">
        insert into paper(<include refid="base_column"/>)VALUES(
        #{id},
        #{title},
        #{time},
        #{chapter},
        #{section},
        #{subject},
        #{level},
        #{radioNum},
        #{radioIds},
        #{multipleNum},
        #{multipleIds},
        #{judgeNum},
        #{judgeIds},
        #{fillingNum},
        #{fillingIds},
        #{essayNum},
        #{essayIds},
        #{state},
        #{createTime}
        )
    </insert>
    <update id="updatePaper" parameterType="com.papergen.domain.Paper">
        UPDATE paper set
        title=#{title},
        time=#{time},
        chapter=#{chapter},
        section=#{section},
        subject=#{subject},
        level=#{level},
        radio_num=#{radioNum},
        radio_ids=#{radioIds},
        multiple_num=#{multipleNum},
        multiple_ids=#{multipleIds},
        judge_num=#{judgeNum},
        judge_ids=#{judgeIds},
        filling_num=#{fillingNum},
        filling_ids=#{fillingIds},
        essay_num=#{essayNum},
        essay_ids=#{essayIds},
        state=#{state},
        create_time=#{createTime}
        WHERE id=#{id}
    </update>
    <delete id="deletePaperById">
        delete from paper where id=#{id}
    </delete>
</mapper>