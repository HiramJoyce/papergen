<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.papergen.dao.AdminDao">
    <resultMap id="adminMap" type="com.papergen.domain.Admin">
        <result column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
    </resultMap>
    <sql id="base_column">
        id, user_name, password
    </sql>
    <select id="selectAdminByUserName" resultMap="adminMap">
        select <include refid="base_column"/> from admin where user_name=#{userName} limit 1;
    </select>
</mapper>